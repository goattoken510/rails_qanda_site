<h1>Questions</h1>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Menu</th>
                </tr>
            </thead>
            <tbody>
            <% @questions.each do |quiestion| %>
                <tr>
                    <td><%= quiestion.id %></td>
                    <td><%= quiestion.title %></td>
                    <td>[ <%= link_to 'Edit', edit_question_path(quiestion) %> ] [Delete]</td>
                </tr>
            <% end %>
            </tbody>
        </table>
        <div>
            <%= link_to 'New quiestion', new_question_path %>
        </div>
    </div>
</div>